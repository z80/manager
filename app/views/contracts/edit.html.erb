<h1>Editing contract</h1>

<%= render 'form' %>
<br>

<%if not @contract.shipped%>
  <%=link_to 'Add item to this contract',      add_contract_item_path( @contract.id )%>
<%end%>
<br>

<h2>Items in this contract:</h2>
<table>
  <%@editable = true%>
  <%@contract_items.each do |ci|%>
    <%@contract_item = ci%>
    <%=render 'contracts/show_contract_item'%>
  <%end%>
</table>

<%= link_to 'Show contract', @contract %> |
<%= link_to 'All contracts', contracts_path %>
