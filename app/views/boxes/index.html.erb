<h1>Listing boxes</h1>

<%=link_to( "All warehousies list", warehouses_path, class: 'btn btn-info' )%>
<br>
<br>

<%= link_to 'Add new box', new_box_path, class: "btn btn-warning" %>
<br>

<%if @paginate%>
  <%=will_paginate( @boxes, renderer: BootstrapPagination::Rails )%>
<%end%>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Warehouse</th>
      <th>Box</th>
      <th>Desc</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td>
            <%if box.warehouse then %>
                <%=box.warehouse.w_id%>
            <%else%>
                Unspecified
            <%end%>
        </td>
        <td><%= box.box_id %></td>
        <td><%= box.desc %></td>
        <td><%= link_to 'Show', box, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_box_path(box), class: 'btn btn-warning' %></td>
        <% if false then %>
            <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new box', new_box_path, class: "btn btn-warning" %>
