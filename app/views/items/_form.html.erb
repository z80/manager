
<%= form_for(@item, :html => { :multipart => true }) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Create/update purchase" %>
  </div>

  <div class="form-group">
    <%= f.label 'Ordering date'%>
    <%= f.date_select :order_date, default: Date.today, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Item picture (like from a website)'%>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Product Id by supplier' %><br>
    <%= f.text_field :supplier_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Outr internal product Id' %><br>
    <%= f.text_field :internal_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Description' %><br>
    <%= f.text_area :desc, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Ordering link' %><br>
    <%= f.text_field :order_link, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Contract desc' %><br>
    <%= f.text_field :contract_desc, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Contract' %><br>
    <%= f.select( :contract_id, @contracts, default: @contract_id, class: "form-control" )%>
  </div>
  <div class="form-group">
    <%= f.label 'Deliver address' %><br>
    <%= f.text_field :deliver_addr, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Current status' %><br>
    <%= f.select :status_id, @statuses, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Select person in charge for' %><br>
    <%= f.select( :user_resp_id, @users, class: "form-control" ) %>
  </div>


  <div class="form-group">
    <%= f.label 'Set size' %><br>
    <%= f.number_field :set_sz, default: 1, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Number of sets' %><br>
    <%= f.number_field :sets_cnt, default: 1, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Unit price' %><br>
    <%= f.text_field :unit_price, default: 0.0, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Comment' %><br>
    <%= f.text_area :comment %>
  </div>

  <div class="actions">
    <%= f.submit "Create/update purchase" %>
  </div>
<% end %>
