<%= form_tag "/static_pages/user_sign_in", multipart: true do %>
  <% if current_user && current_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize( current_user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% current_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>
    To log in enter your <b>E@Mail</b> address and <b>password</b>
  </h2>

  <div class="form-group">
    <%= label_tag :email %><br>
    <%= text_field_tag :email, "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %><br>
    <%= text_field_tag :password, "", class: "form-control" %>
  </div>
  <div class="actions">
    <%= submit_tag "Log in", class: "btn btn-info" %>
  </div>
<% end %>
