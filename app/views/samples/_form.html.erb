<%= form_for(@sample) do |f| %>
  <% if @sample.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sample.errors.count, "error") %> prohibited this sample from being saved:</h2>

      <ul>
      <% @sample.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Received from' %><br>
    <%= f.text_area :from, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Sample description' %><br>
    <%= f.text_area :desc, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Where this sample is located' %><br>
    <%= f.text_area :location, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Received date' %><br>
    <%= f.datetime_select :received, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Due date' %><br>
    <%= f.datetime_select :due, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Person responsible' %><br>
    <%= f.select :user_resp, @users, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Current status' %><br>
    <%= f.select :status, @status, selected: (@sample.status || 0), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Warn application scientist in [x] days' %><br>
    <%= f.number_field :warn_days, value: @warn_days || 7, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit 'Add/update sample', class: 'btn btn-warning' %>
  </div>
<% end %>




